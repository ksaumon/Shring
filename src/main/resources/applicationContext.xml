<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="musicBean"
          class="org.semen.spring.ClassicalMusic">
<!--        <constructor-arg value="Neil"/>-->
    </bean>

    <bean id="musicPlayer"
          class="org.semen.spring.MusicPlayer">
<!--        <constructor-arg ref="musicBean"/> &lt;!&ndash; Передача зависимостей спрингу через ссылку&ndash;&gt;-->
        <property name="music" ref="musicBean"/>

<!--        <property name="name" value="Som name"/>-->
<!--        <property name="volume" value="50"/>-->

        <property name="name" value="${musicPlayer.name}"/> <!-- Подставляем значение из файла musicPlayer.properties
        с помощью 10 строчки -->
        <property name="volume" value="${musicPlayer.volume}"/>
            </bean>

        </beans>